@model ViewModelGestionarContrato

@{
    ViewData["Title"] = "Gestionar contrato";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">BUSCAR EMPLEADO POR DNI</h4>
                    <p class="card-description">
                        Ingrese el <code>DNI</code> de un empleado para filtrarlo en el sistema
                    </p>
                    <form class="form-sample" asp-controller="GestionarContrato" asp-action="BuscarEmpleado" method="get">
                        <div class="contenedor">
                            <input type="text" class="form-control mb-2" placeholder="10153248" name="dni">
                            <button type="submit" class="btn btn-primary" style="margin-left: 150px; margin-right: 150px">Buscar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">DATOS DEL EMPLEADO</h4>

@section SweetAlert2
{

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script type="text/javascript">

        function replaceAll(searchString, replaceString, str) {
           return str.split(searchString).join(replaceString);
        }

        function validacionEmpleado(empleadoEncontrado) {

            if (empleadoEncontrado == 1) {

                Swal.fire({
                    type: 'error',
                    title: 'Algo ha fallado...',
                    text: 'No existe el empleado',
                })

            }
        }

        function validacionCreacionContrato(contratoCreado) {

            if (contratoCreado == 1) {

                Swal.fire({
                    type: 'success',
                    title: 'Se guardó el nuevo contrato',
                    showConfirmButton: false,
                    timer: 2000
                })

            }
        }

        function validacionDatosContrato(contratoDatos, mensajeError) {

            if (contratoDatos == 1) {

                Swal.fire({
                  type: 'warning',
                  title: 'Error en los datos...',
                  html:
                     replaceAll('.','<br>',mensajeError)
                })

            }
        }

        function validacionModificacionContrato(contratoModificado) {

            if (contratoModificado == 1) {

                Swal.fire({
                    type: 'success',
                    title: 'Se guardó las modificaciones del contrato',
                    showConfirmButton: false,
                    timer: 2000
                })

            }
        }

        function validacionAnulacionContrato(contratoAnulado) {

            if (contratoAnulado == 1) {

                Swal.fire({
                    type: 'info',
                    title: '¡Atención!',
                    text: 'Se anuló el contrato',
                })

            }
        }

        validacionEmpleado(@Model.EmpleadoNoEncontrado);
        validacionCreacionContrato(@Model.ContratoCreado);
        validacionDatosContrato(@Model.ErrorDatosContrato, '@Model.MensajeError');
        validacionModificacionContrato(@Model.ModificacionesContrato);
        validacionAnulacionContrato(@Model.ContratoAnulado);

    </script>
}
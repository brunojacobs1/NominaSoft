                                                        break;
                                                    case 2:
                                                        <input type="text" class="form-control" disabled value="Bachiller" />
                                                        break;
                                                    case 3:
                                                        <input type="text" class="form-control" disabled value="Profesional" />
                                                        break;
                                                    case 4:
                                                        <input type="text" class="form-control" disabled value="Magister" />
                                                        break;
                                                    case 5:
                                                        <input type="text" class="form-control" disabled value="Doctor" />
                                                        break;
                                                }
                                            }
                                            else
                                            {
                                                <input type="text" class="form-control" disabled />
                                            }
                                        }
                                    </div>
                                </div>
                            </div>

                                        @{
                                            if (Model.Empleado != null)
                                            {
                                                <input type="text" class="form-control" disabled value="@Model.Empleado.Direccion" />
                                            }
                                            else
                                            {
                                                <input type="text" class="form-control" disabled />
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

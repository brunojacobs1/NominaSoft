                                                <button type="button" disabled class="btn btn-primary" data-toggle="modal" data-target="#crearContrato">
                                                    Crear Contrato
                                                </button>
                                            </div>
                                            <div class="col-sm-4">
                                                <button type="button" disabled class="btn btn-primary" data-toggle="modal" data-target="#editarContrato">
                                                    Editar Contrato
                                                </button>
                                            </div>
                                            <div class="col-sm-4">
                                                <button type="button" disabled class="btn btn-primary" data-toggle="modal" data-target="#anularContrato">
                                                    Anular Contrato
                                                </button>
                                            </div>
                                        }
